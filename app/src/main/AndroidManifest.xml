<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shianne.moveshakedrop" >
    <uses-sdk android:minSdkVersion="19" android:targetSdkVersion="26" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shianne.moveshakedrop.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shianne.moveshakedrop.SelectItem"
            android:label="@string/title_activity_select_item" >
        </activity>
        <activity
            android:name="com.shianne.moveshakedrop.ItemList"
            android:label="@string/title_activity_item_list"
            android:parentActivityName="com.shianne.moveshakedrop.ItemsHistory" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shianne.moveshakedrop.ItemsHistory" />
        </activity>
        <activity
            android:name="com.shianne.moveshakedrop.ItemsHistory"
            android:label="@string/title_activity_items_history">
        </activity>
        <activity
            android:name="com.shianne.moveshakedrop.AddWeight"
            android:label="@string/title_activity_add_weight"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.shianne.moveshakedrop.WeightHistory"
            android:label="@string/title_activity_weight_history">
        </activity>
        <activity
            android:name="com.shianne.moveshakedrop.AddGoal"
            android:label="@string/title_activity_add_goal"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.shianne.moveshakedrop.GoalsList"
            android:label="@string/title_activity_goals_list" >
        </activity>
        <!--<activity
            android:name=".Tester"
            android:label="@string/title_activity_tester" >
        </activity>-->
        <activity
            android:name="com.shianne.moveshakedrop.CompletedGoalsList"
            android:label="@string/title_activity_completed_goals_list">
        </activity>
    </application>

</manifest>
