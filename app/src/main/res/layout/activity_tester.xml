<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.shianne.hellohealthy.Tester">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Goal"
            android:id="@+id/addGoalButton"
            android:onClick="clickAddGoal"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/itemListButton"
            android:layout_alignStart="@+id/itemListButton"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item to List"
            android:id="@+id/addItemListButton"
            android:onClick="clickAddItemtoList"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GoalsList"
            android:id="@+id/goalListButton"
            android:onClick="clickGoalList"
            android:layout_below="@+id/addItemListButton"
            android:layout_alignLeft="@+id/addItemListButton"
            android:layout_alignStart="@+id/addItemListButton"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ItemList"
            android:id="@+id/itemListButton"
            android:onClick="clickItemList"
            android:layout_below="@+id/addGoalButton"
            android:layout_alignRight="@+id/addWeightButton"
            android:layout_alignEnd="@+id/addWeightButton"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Weight"
            android:id="@+id/addWeightButton"
            android:onClick="clickAddWeight"
            android:layout_below="@+id/itemListButton"
            android:layout_alignRight="@+id/weightHistoryButton"
            android:layout_alignEnd="@+id/weightHistoryButton"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item history"
            android:id="@+id/itemHistoryButton"
            android:onClick="clickItemHistory"
            android:layout_below="@+id/goalListButton"
            android:layout_alignLeft="@+id/goalListButton"
            android:layout_alignStart="@+id/goalListButton"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select item"
            android:id="@+id/selectItemButton"
            android:onClick="clickSelectItem"
            android:layout_below="@+id/itemHistoryButton"
            android:layout_alignLeft="@+id/itemHistoryButton"
            android:layout_alignStart="@+id/itemHistoryButton"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weight history"
            android:id="@+id/weightHistoryButton"
            android:onClick="clickWeightHistory"
            android:layout_alignTop="@+id/selectItemButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeee"/>

</android.support.v4.widget.DrawerLayout>